<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBindingCommands.Views.UsuarioView"
             Title="UsuarioView">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry Text="{Binding Name}" Placeholder="Digite seu nome" />
        <Label Text="{Binding DisplayName}" />
        
        

        <Label x:Name="lblInformacoes" Text=""/>
        <Button x:Name="btnAtualizarInformacoes" Text="Atualizar Informações" Clicked="btnAtualizarInformacoes_Clicked" />
    </VerticalStackLayout>
</ContentPage>
    